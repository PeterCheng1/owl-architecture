{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"]
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
